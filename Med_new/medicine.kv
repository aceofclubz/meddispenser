#:import Color kivy.utils.get_color_from_hex
#:set Red "#F94A69"
#:set Green "#06A5AB"
#:set LBlue "0066BA"
#:set Blue "#16203B"
#:set DBlue '#03A9F4'

<Button>
    bold: True
    background_color: Color(LBlue)


#takes the property of label
<WrappedLabel@Label>:
    size_hint_y: None

# multiply the height to 1.5 of the text size

    height: self.texture_size[1] + (self.texture_size[1]/2)
    width: self.texture_size[1] + (self.texture_size[1]/2)
    markup: True

<MainScreen>:
    orientation: 'vertical'

    ActionBar:
        ActionView:
            ActionPrevious:
                titles:""
                with_previous: False
            ActionOverflow:
                ActionButton:
                    text:"Settings"
                    on_press: app.open_settings()

    ScreenManager:
        id: kivy_screen_manager

        BarcodeScreen:
            id: barcode_screen
            name: "barcode_screen"

        StartScreen:
            id: start_screen
            name: "start_screen"

        FirstScreen:
            id: first_screen
            name: "first_screen"

        SecondScreen:
            id: second_screen
            name: "second_screen"

        ThirdScreen:
            id: third_screen
            name: "third_screen"

        FourthScreen:
            id: fourth_screen
            name: "fourth_screen"

        FifthScreen:
            id: fifth_screen
            name: "fifth_screen"

#main screen
#wrapped label became the universal design for label
<BarcodeScreen@Screen>
    BoxLayout:

        orientation:"vertical"

        #about 2% of the width
        padding: root.width * 0.02, root.height * .02

        #minimum of 2% of the root width and root height of the text
        spacing: min(root.width, root.height) *.02

        WrappedLabel:
            id: label
            text: "Scan Barcode ID here: "
            font_size: 25

        TextInput:
            id: password
            text: ''
            multiline: False
            halign: "center"
            valign: "middle"
            markup: True
            font_size: 40
            cursor_blink: True


        Button:
            text: "Confirm"
            font_size: 25
            on_release: app.root.changeScreen(self.text.lower())

        Button:
            text: "Clear"
            font_size: 25
            on_release: self.ids.password.current = ''

<StartScreen@Screen>
    BoxLayout:
        #Settings
        orientation:"vertical"

        #about 2% of the width
        padding: root.width * 0.02, root.height * .02

        #minimum of 2% of the root width and root height of the text
        spacing: min(root.width, root.height) *.02

        #label found at the center of the start screen
        WrappedLabel:
            text:"[b][i][u]Please select medicine:[/b][/i][/u]"
            font_size: min(root.height, root.width) / 10

        Button:
            text: "Biogesic"
            font_size: 25
            on_release: app.root.changeScreen(self.text.lower())

        Button:
            text: "Buscopan"
            font_size: 25
            on_release: app.root.changeScreen(self.text.lower())

        Button:
            text: "Decolgen No-Drowse"
            font_size: 25
            on_release: app.root.changeScreen(self.text.lower())

        Button:
            text: "Dolfenal"
            font_size: 25
            on_release: app.root.changeScreen(self.text.lower())

        Button:
            text: "Solmux"
            font_size: 25
            on_release: app.root.changeScreen(self.text.lower())

